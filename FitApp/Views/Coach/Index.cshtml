@model IEnumerable<FitApp.Models.Coach>

@{
    ViewBag.Title = "Trenerzy";
}

<h2>Trenerzy</h2>

@if(User.IsInRole("admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
       
        <td>
            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.CoachId }) 
            }
            |
                @Html.ActionLink("Details", "Details", new { id=item.CoachId }) |
            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.CoachId })
            }
        </td>
    </tr>
}

</table>
