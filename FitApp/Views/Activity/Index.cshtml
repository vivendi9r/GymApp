@model IEnumerable<FitApp.Models.Activity>

@{
    ViewBag.Title = "Treningi";
}

<h2>Treningi</h2>
@if (User.IsInRole("admin"))
{
<p>
    @Html.ActionLink("Dodaj nowy", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoachId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoachId)
        </td>
        <td>
            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("Edytuj", "Edit", new { id = item.ActivityId }) 
            }
            |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ActivityId }) |
            @if (User.IsInRole("admin"))
            {
            @Html.ActionLink("Usuń", "Delete", new { id=item.ActivityId })
            }        
        </td>
    </tr>
}

</table>
